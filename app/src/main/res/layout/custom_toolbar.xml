<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_height"
    android:background="@color/title_bar_bg">

    <FrameLayout
        android:id="@+id/fl_left"
        android:layout_width="@dimen/bar_height"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/icon_back_white" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="这是标题"
        android:textColor="@color/title_bar_color"
        android:textSize="@dimen/title_bar_size" />

    <FrameLayout
        android:id="@+id/fl_right"
        android:layout_width="@dimen/bar_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/icon_back_white" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="知会"
            android:textColor="@color/txt_subtitle_color"
            android:textSize="@dimen/subtitle_bar_size" />
    </FrameLayout>
</RelativeLayout>